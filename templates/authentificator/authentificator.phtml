<h1>Page de connexion et d'inscription</h1>
<section>
    <h2>Connexion</h2>
    <form action="/res03-projet-final/check-login" method="POST">
        <input type="hidden" name="formLogin" id="formLogin" value="formLogin" /> 
        <fieldset>
            <label for="login-email">Email :</label>
            <input type="email" name="login-email"/>
        </fieldset>
        <fieldset>
            <label for="login-password"></label>
            <input type="password" name="login-password"/>
        </fieldset>
        <input type="submit" name="submit"/>
    </form>
</section>
<section>
    <h2>S'inscrire</h2>
    <form action="/res03-projet-final/check-register" method="POST">
        <input type="hidden" name="formRegister" id="formRegister" value="formRegister" /> 
        <fieldset>
            <label for="register-username">Nom :</label>
            <input type="text" id="register-username" name="register-username"/>
        </fieldset>
        <fieldset>
            <label for="register-email">Email :</label>
            <input type="email" id="register-email" name="register-email"/>
        </fieldset>
        <fieldset>
            <label for="register-password">Votre mot de passe :</label>
            <input type="password" id="register-password" name="register-password"/>
        </fieldset>
        <fieldset>
            <label for="register-confPassword">Confirmation du mot de passe:</label>
            <input type="password" id="register-confPassword" name="register-confPassword"/>
        </fieldset>
        <input type="submit" name="submit"/>
    </form>
</section>